<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_number_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目编号："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_number"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_number_title"
                    android:layout_marginLeft="5dp"
                    android:text="L0000025" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目名称："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_project_name_title"
                    android:layout_marginLeft="5dp"
                    android:text="测试使用大桥1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_builder_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托单位："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_builder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_project_builder_title"
                    android:layout_marginLeft="5dp"
                    android:text="南京市测试研究所" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_industries_class_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业分类："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_industries_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="市政工程"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_industries_class_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_leader_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目经理："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_leader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_project_leader_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_creater_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目创建人："
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/tv_project_creater"
                    android:layout_width="match_parent"
                    android:text="李四"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_creater_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_techleader_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技术负责人："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_techleader"
                    android:layout_width="match_parent"
                    android:text="陈五"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_techleader_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_audit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核人："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_audit"
                    android:layout_width="match_parent"
                    android:text="王六"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_audit_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_mainaudit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审定人："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_mainaudit"
                    android:layout_width="match_parent"
                    android:text="赵七"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_mainaudit_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_decision_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="决策人："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_decision"
                    android:layout_width="match_parent"
                    android:text="胡八"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_decision_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_project_member_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目成员："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_member"
                    android:layout_width="match_parent"
                    android:text="胡八"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_member_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_project_survey_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目概况："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_project_survey"
                    android:layout_width="match_parent"
                    android:text="该项目主要目的是为了缓解XXXXXXXXXXXXXXXXXXX的问题"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_project_survey_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>