                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="赵七"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_decision_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="决策人："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_decision"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="胡八"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_member_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="项目成员："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_member"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="郭靖、黄蓉、萧十一郎、金蛇郎君、美国队长"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_survey_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="项目概况："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_survey"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="主要目的是为了缓解两边交通不便的问题"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>