<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_number_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="项目编号："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_number"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp"
                    android:text="L0000025" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_name_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="项目名称："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/font_size_26"
                    android:text="测试使用大桥1" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_builder_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="委托单位："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_builder"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp"
                    android:text="南京市测试研究所" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_industries_class_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="行业分类："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_industries_class"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="市政工程"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_leader_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="项目经理："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_leader"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_creater_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="项目创建人："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />


                <TextView
                    android:id="@+id/tv_project_creater"
                    android:layout_width="0dp"
                    android:text="李四"
                    android:layout_weight="6"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_techleader_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="技术负责人："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_techleader"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="陈五"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_project_audit_title"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="审核人："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/tv_project_audit"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="王六"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_26"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
