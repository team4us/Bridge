<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:bind="http://robobinding.org/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_number_title"
                    style="@style/disease_title_textview"
                    android:text="项目编号："/>

                <TextView
                    android:id="@+id/ev_project_number"
                    style="@style/disease_content_textview"
                    bind:text="{code}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_name_title"
                    style="@style/disease_title_textview"
                    android:text="项目名称："/>

                <TextView
                    android:id="@+id/tv_project_name"
                    style="@style/disease_content_textview"
                    bind:text="{name}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_builder_title"
                    style="@style/disease_title_textview"
                    android:text="委托单位："/>

                <TextView
                    android:id="@+id/tv_project_builder"
                    style="@style/disease_content_textview"
                    bind:text="{company}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_industries_class_title"
                    style="@style/disease_title_textview"
                    android:text="行业分类："/>

                <TextView
                    android:id="@+id/tv_industries_class"
                    style="@style/disease_content_textview"
                    bind:text="{category}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_leader_title"
                    style="@style/disease_title_textview"
                    android:text="项目经理："/>

                <TextView
                    android:id="@+id/tv_project_leader"
                    style="@style/disease_content_textview"
                    bind:text="{manager}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_creater_title"
                    style="@style/disease_title_textview"
                    android:text="项目创建人："/>

                <TextView
                    android:id="@+id/tv_project_creater"
                    style="@style/disease_content_textview"
                    bind:text="{creator}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_techleader_title"
                    style="@style/disease_title_textview"
                    android:text="技术负责人："/>

                <TextView
                    android:id="@+id/tv_project_techleader"
                    style="@style/disease_content_textview"
                    bind:text="{techManager}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_audit_title"
                    style="@style/disease_title_textview"
                    android:text="审核人："/>

                <TextView
                    android:id="@+id/tv_project_audit"
                    style="@style/disease_content_textview"
                    bind:text="{auditor}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_mainaudit_title"
                    style="@style/disease_title_textview"
                    android:text="审定人："/>

                <TextView
                    android:id="@+id/tv_project_mainaudit"
                    style="@style/disease_content_textview"
                    bind:text="{judge}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_decision_title"
                    style="@style/disease_title_textview"
                    android:text="决策人："/>

                <TextView
                    android:id="@+id/tv_project_decision"
                    style="@style/disease_content_textview"
                    bind:text="{decisionMaker}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_member_title"
                    style="@style/disease_title_textview"
                    android:text="项目成员："/>

                <TextView
                    android:id="@+id/tv_project_member"
                    style="@style/disease_content_textview"
                    bind:text="{member}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_project_survey_title"
                    style="@style/disease_title_textview"
                    android:text="项目概况："/>

                <TextView
                    android:id="@+id/tv_project_survey"
                    style="@style/disease_content_textview"
                    bind:text="{description}"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>