<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_efefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_project_title"
                    style="@style/disease_title_textview"
                    android:text="所在项目："/>

                <TextView
                    android:id="@+id/tv_bridge_project"
                    style="@style/disease_content_textview"
                    android:text="长江一桥xxxx桥墩"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_number_title"
                    style="@style/disease_title_textview"
                    android:text="桥梁编号："/>

                <TextView
                    android:id="@+id/tv_bridge_number"
                    style="@style/disease_content_textview"
                    android:text="Q300245"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_name_title"
                    style="@style/disease_title_textview"
                    android:text="桥梁名称："/>

                <TextView
                    android:id="@+id/tv_bridge_name"
                    style="@style/disease_content_textview"
                    android:text="南京大桥第一桥"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_span_title"
                    style="@style/disease_title_textview"
                    android:text="跨径分类："/>

                <TextView
                    android:id="@+id/tv_bridge_span"
                    style="@style/disease_content_textview"
                    android:text="斜跨"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_maintainlevel_title"
                    style="@style/disease_title_textview"
                    android:text="养护类别："/>

                <TextView
                    android:id="@+id/tv_bridge_maintainlevel"
                    style="@style/disease_content_textview"
                    android:text="精保养"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_maintain_title"
                    style="@style/disease_title_textview"
                    android:text="养护等级："/>

                <TextView
                    android:id="@+id/tv_bridge_maintain"
                    style="@style/disease_content_textview"
                    android:text="精养护"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_designload_title"
                    style="@style/disease_title_textview"
                    android:text="设计荷载："/>

                <TextView
                    android:id="@+id/tv_bridge_designload"
                    style="@style/disease_content_textview"
                    android:text="100t"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_buildtime_title"
                    style="@style/disease_title_textview"
                    android:text="建造年月："/>

                <TextView
                    android:id="@+id/tv_bridge_buildtime"
                    style="@style/disease_content_textview"
                    android:text="1999-10-2"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_design_title"
                    style="@style/disease_title_textview"
                    android:text="设计单位："/>

                <TextView
                    android:id="@+id/tv_bridge_design"
                    style="@style/disease_content_textview"
                    android:text="南京桥梁所"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_bridge_build_title"
                    style="@style/disease_title_textview"
                    android:text="施工单位："/>

                <TextView
                    android:id="@+id/tv_bridge_build"
                    style="@style/disease_content_textview"
                    android:text="南京游记一队"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>