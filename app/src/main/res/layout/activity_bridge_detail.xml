                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp"
                    android:text="南京桥梁所" />

            </LinearLayout>

            <View style="@style/line_h_margin_left_10" />

