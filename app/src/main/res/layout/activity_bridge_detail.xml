                    android:id="@+id/tv_bridge_build"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_26"
                    android:layout_marginLeft="5dp"
