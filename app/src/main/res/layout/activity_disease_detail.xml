<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_component_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="构件名称："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_component_name"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:text="桥梁部件"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_component_name_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_position_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部位："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:text="上部一般构件"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_position_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病害类型："
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="钢筋锈蚀"
                    android:layout_toRightOf="@id/tv_type_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_startpoint_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起点坐标："
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/tv_startpoint_title"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_startpoint_x"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_startpoint_y"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_endpoint_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="终点坐标："
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/tv_endpoint_title"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_endpoint_x"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_endpoint_y"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_length_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长度（m）："
                    android:layout_centerVertical="true" />

                <EditText
                    android:id="@+id/et_length"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_toRightOf="@id/tv_length_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_width_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="典型宽度（mm）："
                    android:layout_centerVertical="true" />

                <EditText
                    android:id="@+id/et_width"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_toRightOf="@id/tv_width_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_media_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多媒体："
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/btn_media"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="请选择多媒体类型"
                    android:layout_toRightOf="@id/tv_media_title"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>