<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:bind="http://robobinding.org/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_efefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/DiseaseTitle"
                    android:text="构件名称："/>

                <TextView
                    style="@style/DiseaseContent"
                    bind:text="{componentName}"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/DiseaseTitle"
                    android:text="部位："/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:source="{locations}"
                    bind:itemLayout="@layout/view_spinner_item"
                    bind:dropdownLayout="@layout/view_spinner_dropdown_item"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/DiseaseTitle"
                    android:text="病害类型："/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    bind:source="{diseaseTypes}"
                    bind:itemLayout="@layout/view_spinner_item"
                    bind:dropdownLayout="@layout/view_spinner_dropdown_item"/>

                <EditText
                    android:type="@+type/et_disease_type"
                    style="@style/disease_input_edittext"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginRight="@dimen/margin_5"
                    android:visibility="gone"/>

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

                <RadioButton
                    style="@style/base_radio_button"
                    android:textSize="@dimen/font_size_36"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/DiseaseTitle"
                    android:text="多媒体："/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">
                </LinearLayout>

                <View
                    style="@style/line_h"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

                <com.xiaohui.bridge.component.MyGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp"/>

                <View
                    style="@style/line_h"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">
                </LinearLayout>

                <View
                    style="@style/line_h"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>