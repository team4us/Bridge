<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/color_099fde</item>
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:textColor">@color/color_ffffff</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="MenuOptionsTheme">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>

    <style name="BaseInput" parent="android:Widget.EditText">
        <item name="android:layout_height">@dimen/button_height_60</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/font_size_30</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/color_ffffff</item>
        <item name="android:textColorHint">@color/color_dddddd</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_margin">@dimen/margin_15</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
    </style>

    <style name="Button1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_60</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/font_size_40</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/selector_btn_1</item>
        <item name="android:layout_margin">@dimen/margin_15</item>
    </style>

    <style name="line_h_margin_left_10" parent="line_h">
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
    </style>

    <style name="line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_c8c8c8</item>
    </style>

    <style name="line_v">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_c8c8c8</item>
    </style>

    <style name="base_title_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_099fde</item>
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <style name="base_input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:editable">false</item>
    </style>

    <style name="disease_title_textview" parent="base_title_textview">
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <style name="disease_content_textview" parent="disease_title_textview">
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="disease_input_edittext" parent="base_input_edittext">
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:editable">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="disease_number_input" parent="disease_input_edittext">
        <item name="android:inputType">number</item>
        <item name="android:digits">"-,.0123456789"</item>
    </style>

    <style name="detail_input_edittext" parent="base_input_edittext">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:editable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_item" parent="title">
        <item name="android:layout_height">@dimen/view_item_height</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:paddingRight">@dimen/margin_10</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="base_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tv_black_blue</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

</resources>
